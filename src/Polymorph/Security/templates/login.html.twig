
{% extends baseTemplate %}

{% block imports %}

    {{ parent() }}
    <!--suppress HtmlUnknownTarget -->
    <link rel="import" href="bower_components/polymorph/src/Polymorph/Page/elements/polymorph-page.html"/>
    <link rel="import" href="bower_components/polymorph/src/Polymorph/Security/elements/polymorph-login.html"/>

{% endblock %}

{% block view %}

    <polymorph-page class="polymorph-partial" path="{{ view.path }}">
        <polymorph-login
                username-label="{{ usernameLabel }}"
                password-label="{{ passwordLabel }}"
                button-label="{{ buttonLabel }}"
                error-text="{{ errorText }}"
                token="{{ token }}">
        </polymorph-login>
    </polymorph-page>

{% endblock %}
