{
  "name": "bnowack/polymorph",
  "description": "A PHP micro-framework for creating Polymer applications that are both browser- and bot-friendly",
  "license": "MIT",
  "authors": [
    {
      "name": "Benjamin Nowack",
      "email": "mail@bnowack.de"
    }
  ],
  "require": {
    "silex/silex": "2.*",
    "twig/twig": "1.*"
  },
  "require-dev": {
    "phpspec/phpspec": "2.*",
    "phpunit/phpunit": "4.*",
    "ext-xdebug": "2.*",
    "henrikbjorn/phpspec-code-coverage": "1.*"
  },
  "autoload": {
    "psr-4": {
      "Polymorph\\": "src/Polymorph",
      "spec\\Polymorph\\": "src/Polymorph"
    }
  }
}
